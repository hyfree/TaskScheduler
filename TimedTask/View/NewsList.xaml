<Window x:Class="TimedTask.View.NewsList"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="新闻资讯" Height="400" Width="580" 
        MouseLeftButtonDown="Window_MouseLeftButtonDown" WindowStartupLocation="CenterScreen" 
        AllowsTransparency="True" WindowStyle="None"
        Background="Transparent">
    <Border x:Name="mainBoder" Style="{StaticResource MainBoderStyle}">
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <Image  Margin="9,3,0,0" Source="/Theme/Images/app.ico"/>
                <Label x:Name="lblTask" Content="任务助手 - 新闻资讯" Foreground="White"/>
                <Button Style="{StaticResource WindowCloseButtonStyle}" Margin="414,0,0,0" Click="btnClose_Click" />
            </StackPanel>
            <StackPanel Background="White" Width="579" Height="373" Margin="0">
                <Border x:Name="brMain" Height="371" DockPanel.Dock="Top" BorderBrush="{x:Null}" 
                        Background="Transparent"  CornerRadius="5"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
